@page "/users"

<MudGrid Justify="Justify.FlexStart">
    <MudItem xs="12" Class="pb-4">
        <MudButton Variant="Variant.Outlined" Color="Color.Success" StartIcon="@Icons.Material.Filled.Add">Добавить группу</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Success" StartIcon="@Icons.Material.Filled.Add">Добавить пользователя</MudButton>
    </MudItem>
    <MudItem xs="4">
        <MudTreeView T="string" Hover="true" @bind-SelectedValue="SelectedValue">
            <MudTreeViewItem Value="@("Старшие администраторы")">
                <MudTreeViewItem Value="@("root")"/>
            </MudTreeViewItem>
            <MudTreeViewItem Value="@("Администраторы")">
            </MudTreeViewItem>
        </MudTreeView>
    </MudItem>
    <MudItem xs="8">
    </MudItem>
</MudGrid>

<div style="position: fixed; bottom: 1rem; right: 1rem; width: 30rem; height: 24rem">
</div>

@code {
    string SelectedValue { get; set; }
}